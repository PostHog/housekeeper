gemini_key: "YOUR_GEMINI_KEY"  # Deprecated - use llm.gemini.api_key instead
logging:
  level: "info"  # Options: trace, debug, info, warn, error, fatal, panic
  format: "text" # Options: text, json

# Slack configuration
slack:
  webhook_url: "https://hooks.slack.com/services/YOUR/WEBHOOK/URL"  # For notifications
  # Socket Mode configuration for interactive bot
  bot_token: "xoxb-YOUR-BOT-TOKEN"        # Bot User OAuth Token
  app_token: "xapp-1-YOUR-APP-TOKEN"      # App-Level Token for Socket Mode
  debug: false                             # Enable debug logging for Slack SDK

# LLM Provider configuration (for Slack bot mode)
llm:
  provider: "gemini"  # Options: gemini, claude, openai
  
  # Gemini configuration
  gemini:
    api_key: "YOUR_GEMINI_KEY"
    model: "gemini-1.5-flash"  # Options: gemini-1.5-flash, gemini-1.5-pro
  
  # Claude configuration
  claude:
    api_key: "YOUR_CLAUDE_KEY"
    model: "claude-3-5-sonnet-20241022"  # Options: claude-3-5-sonnet-20241022, claude-3-opus-20240229
  
  # OpenAI configuration
  openai:
    api_key: "YOUR_OPENAI_KEY"
    model: "gpt-4-turbo-preview"  # Options: gpt-4-turbo-preview, gpt-4, gpt-3.5-turbo
clickhouse:
  host: "127.0.0.1"
  port: 9000
  user: "default"
  password: "default"
  database: "default"
  cluster: "default"
prometheus:
  host: "localhost"
  port: 8481
  # VictoriaMetrics cluster mode settings
  vm_cluster_mode: false  # Set to true for VM cluster mode
  vm_tenant_id: "0"      # Tenant ID for VM cluster mode
  vm_path_prefix: ""     # Optional path prefix (e.g. "prometheus" for VM)
